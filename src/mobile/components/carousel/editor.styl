.carousel-editor {
    .fileupload {
        .item {
            text-align: center;
            width: 100%;
            background-color: whitesmoke;

            input[type="file"] {
                position: absolute;
                width: 100%;
                height: 100%;
                opacity: 0;
            }

            i {
                font-size: 120px;
                margin: 20px 0 10px 0;
            }

            .loading {
                text-align: center;
                padding: 40px;
            }
        }
    }
   
}