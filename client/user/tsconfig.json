{
    "compilerOptions": {
        "allowJs": false,
        "target": "es5",
        "module": "amd",
        "sourceMap": false,
        "outDir": "../../www",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "../",
        "paths": {
            "*": [
                "lib/*.ts"
            ],
            "chitu.mobile": [
                "client/lib/chitu.mobile"
            ],
            "adminComponents/*": [
                "admin/components/*"
            ],
            "adminServices/*": [
                "admin/services/*"
            ],
            "userServices/*": [
                "services/*",
                "user/services/*"
            ]
        },
        "experimentalDecorators": true,
        "declaration": false,
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "dom.iterable"
        ]
    },
    "include": [

        "../lib/typings/fetch.d.ts",
        "../lib/typings/hammer.d.ts",
        "../lib/typings/jquery.d.ts",
        "../lib/typings/react/*.*",
        "../lib/typings/react-dom/*.*",
        "../lib/typings/require.d.ts",
        "../lib/*.d.ts",

        // "../client/mylib/*.ts",

        // "../admin/adminServices/*",

        "../share/models/*",

        "*.tsx",
        "**/*.tsx",
        "*.ts",
        "**/*.ts"
        // "../lib/src/ui",
        // "../lib/src/chitu.mobile"
    ]
}