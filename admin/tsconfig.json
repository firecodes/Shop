{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": false,
        "outDir": "../www",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "../",
        "paths": {
            "*": [
                "lib/*"
            ],
            "mobileComponents/*": [
                "user/pageComponents/*"
            ],
            "componentDesigner/*": [
                "user/componentDesigner/*"
            ]
        },
        "experimentalDecorators": true
    },
    "include": [
        "../lib/typings",
        "../lib/*.d.ts",
        "../user/dest",
        "*.tsx",
        "**/*.tsx",
        "*.ts",
        "**/*.ts"
    ]
}