{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": false,
        "outDir": "../www",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "../",
        "paths": {
            "*": [
                "lib/*"
            ],
            "mobileComponents/*": [
                "user/pageComponents/*"
            ],
            "componentDesigner/*": [
                "user/componentDesigner/*"
            ]
        },
        "experimentalDecorators": true
    },
    "exclude": [],
    "include": [
        "../lib/typings",
        "../lib/*.d.ts",
        "../share/*.d.ts",
        "../www/user/userServices.d.ts",
        "services/*",
        "references.d.ts",
        // "application.tsx"

        "modules/station/components/virtualMobile",
        "modules/station/components/mobilePageDesigner",
        "modules/station/components/componentDesigner",

        "*.tsx",
        "**/*.tsx"
        // "*.ts",
        // "**/*.ts"
    ]
}