{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": false,
        "outDir": "../www",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "../",
        "paths": {
            "*": [
                "lib/dest/*"
            ],
            "mobileComponents/*": [
                "user/pageComponents/*"
            ]
        },
        "experimentalDecorators": true
    },
    "exclude": [
        "user",
        "components",
        "controls",
        "pageComponents",
        "services",
        "userServices.tsx"
    ],
    "include": [
        "../scripts",
        "../lib/dest/mobile/mobileControls.d.ts",
        "*.tsx",
        "**/*.tsx",
        "*.ts",
        "**/*.ts"
    ]
}