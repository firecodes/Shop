{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": false,
        "outDir": "../www",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "../",
        "paths": {
            "chitu.mobile": [
                "lib/src/chitu.mobile"
            ],
            "mobileComponents/*": [
                "user/pageComponents/*"
            ],
            "formValidator": [
                "lib/formValidator.d.ts"
            ]
        },
        "experimentalDecorators": true
    },
    "exclude": [
        "user",
        "components",
        "pageComponents",
        "controls",
        "services"
    ],
    "include": [
        "../lib/typings/fetch.d.ts",
        "../lib/typings/hammer.d.ts",
        "../lib/typings/jquery.d.ts",
        "../lib/typings/react/*.*",
        "../lib/typings/react-dom/*.*",
        "../lib/typings/require.d.ts",
        
        "../lib/mobileControls.d.ts",
        "../lib/formValidator.d.ts",
        "../lib/ui.d.ts",

        "dest/*.d.ts",
        "*.tsx",
        "**/*.tsx",
        "*.ts",
        "**/*.ts"
        // "../lib/src/ui",
        // "../lib/src/chitu.mobile"
    ]
}